//******************************** SETUP ******************************************
 int sensorValue = 0;
void setup()                    // configura el pin 3  salida

  {
  pinMode( 3, OUTPUT) ;
}

//********** Loop *****************************************************************

void loop()                    // inicia el bucle del programa 

{
  sensorValue = analogRead (A0) ;

analogWrite( 3, sensorValue/4) ;
}

